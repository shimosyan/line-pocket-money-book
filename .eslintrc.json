{
  "root": true,
  "extends": [
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "prettier/prettier": ["warn", {
      "singleQuote": true,
      "semi": true,
      "printWidth": 100
    }]
  }
}
